<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>MongoViewer</display-name>

	<!-- Servlets -->
	<servlet>
		<servlet-name>Jersey Servlet</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>com.imaginea.mongodb.requestdispatchers</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>User Login Servlet</servlet-name>
		<servlet-class>com.imaginea.mongodb.services.servlet.UserLogin</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>User Logout Servlet</servlet-name>
		<servlet-class>com.imaginea.mongodb.services.servlet.UserLogout</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Mongo Query Graphs</servlet-name>
		<servlet-class>com.imaginea.mongodb.services.servlet.Graphs</servlet-class>
	</servlet>

	<!-- Servlet Mapping -->
	<servlet-mapping>
		<servlet-name>Jersey Servlet</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>User Login Servlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>User Logout Servlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Mongo Query Graphs</servlet-name>
		<url-pattern>/graphs/initiate</url-pattern>		
		<url-pattern>/graphs/query</url-pattern>
		 
	</servlet-mapping>
	
</web-app>