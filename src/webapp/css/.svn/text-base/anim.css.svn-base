

.button {
    font-size:12px;
    font-family:Verdana,sans-serif;
    font-weight:bold;
    color:#888888;
    background-color:#EEEEEE;
    border-style:solid;
    border-color:#BBBBBB;
    border-width:2px;
}


.button:hover {
    border-top-color:#79b2ea;
    background:#B5E3F2;
    color: #030303;
    cursor: pointer;
}
.button:active {
    border-top-color: #1b435e;
    background:  #104E8B;
}

div#left-sidebar{
    position:absolute;
    top:71px;
    left:0;
    width:140px;
    bottom: 0;
    background-color: #EEEEEE;
    padding-left:10px;
    border-bottom-style: ridge;
    border-right:1px solid #ccc;
    border-top:1px solid #ccc;

}
#left-sidebar #consoleButton{
    position:absolute;
    left:0;
    bottom:0;
    padding-right:10px ;
}
#left-sidebar .sect{
    font-style: inherit;
    font-weight: bold;
    font-size:14px;
    color: #5EBEF2;
    font-family: inherit;
    border-bottom: 1px solid #ccc;
    list-style-type: none;
    padding-top: 5px;

}
#left-sidebar #dbBar li{
    list-style-image: url('../images/database.png');
    font-weight: bold;
    font-size:12px;

}
#left-sidebar #dbBar li:hover{
    text-decoration: underline;
    cursor:pointer;
}
#left-sidebar #dbBar li:active{

   background-color: #BBBBBB;

}
#left-sidebar #collBar li{
    list-style-image: url('../images/coll.png');
    font-weight: bold;
    font-size:12px;


}
#left-sidebar #collBar li:hover{
    text-decoration: underline;
    cursor:pointer;
}
#left-sidebar #collBar li:active{

   background-color:#575757;

}
#left-sidebar #addNewCol{
    font-weight: bold;
    font-size:12px;
    padding-top: 10;
    padding-left: 27;
}
#left-sidebar #addNewCol:hover{
    text-decoration: underline;
    cursor:pointer;
}
#left-sidebar #addNewDB{
    font-weight: bold;
    font-size:12px;
    padding-top: 10;
    padding-left: 27;
}
#left-sidebar #addNewDB:hover{
    text-decoration: underline;
    cursor:pointer;
}
div#topbar{
    position:absolute;
    top:0;
    left:0;
    right:0;

    height: 20;
    background-color: #EEEEEE;
    padding-left:10px;
    border-bottom: 1px solid #ccc;
    border-right: 1px solid #ccc;
}
div#topbar #logout{
    position: absolute;
    right:0;
    top:0;
    cursor:pointer;

}
div#topbar .host{
    font-weight: bold;
    font-family: monospace;
}
div#menubar{
    position:absolute;
    top:20;
    left:0;
    width:100%;
    height: 50;
    background-color: #EEEEEE;
    border-top: 1px solid #ccc;
    border-right: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
}
div#menubar #menu img{

    padding-left: 20;
    padding-right:20;
    padding-top: 2;
    padding-bottom: 2;
}
div#menubar #menu img:hover{

    background-color: #BBBBBB;
    cursor:pointer;

}
div#menubar #menu img:active{

    background-color: #575757 ;
    cursor:pointer;
    width: 25px;
    height: 25px;
}
div#menubar #menu #refresh{
    position: absolute;
    right:0;
    top:0;
    padding-right:10px ;


}
